@using Myzj.OPC.UI.Model.Base
@model Myzj.OPC.UI.Model.MLTSYSProjectMannger.MLTSYSProjectImageReq
<h2>专题图片管理</h2>

@using (Html.BeginForm())
{

    var success = @ViewData["SuccessMsg"];
    if (null != success)
    {
    <span style="color: green">@success</span>
    }
    var notice = @ViewData["ErrorMsg"];
    if (null != notice)
    {
    <span style="color: red">@notice</span>
    }
    var detail = ViewData["Detail"];
    if (null != detail)
    {
    @Html.Partial("MLTSYSProjectImageDetail", detail)
    }
    var pager = ViewData["Pager"];
    if (null != pager)
    {
    @Html.Partial("Pager", pager)
    }
}

<script type="text/javascript">
    $(function () {
        
        //删除
        $(".btnDelete").click(function () {
            var projectId = $(this).attr("pvalue");
           // alert("删除" + projectId);
        });

        //修改状态
        $(".clProjectState").click(function () {
            var state = 0;
            var txtid = $(this).attr("pvalue");
            var txtState = $(this).attr("pstate");
            if (txtState == 1) {
                state = 0;
            } else {
                state = 1;
            }
            $.ajax({
                url: "/MLTSYSProject/UpdateImageStates",
                type: "post",
                data: { "id": txtid, "State": state },
                success: function (res) {
                    if (res.DoFlag) {
                        alert("编辑成功");
                        location.reload();
                    } else {
                        alert(res.DoResult);
                    }
                }
            });
        });

        //修改排序
        $(".txtSort").change(function () {
            var txtSort = $.trim($(this).val());
            var regex = /^[0-9]*$/;
            var txtid = $(this).attr("pvalue");
            if (txtSort == null || txtSort == "") {
                alert("请输入排序!");
                return false;
            }
            if (!regex.test(txtSort)) {
                alert("只能输入数字!");
                return false;
            } else {
                $.ajax({
                    url: "/MLTSYSProject/UpdateImageSort",
                    type: "post",
                    data: { "id": txtid, "sort": txtSort },
                    success: function (res) {
                        if (res.DoFlag) {
                            alert("编辑成功");
                            location.reload();
                        } else {
                            alert(res.DoResult);
                        }
                    }
                });
            }
        });
    });
</script>
