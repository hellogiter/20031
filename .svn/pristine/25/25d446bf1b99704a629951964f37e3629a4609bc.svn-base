@model IEnumerable<Myzj.OPC.UI.Model.BargainGroup.GroupRecordDetailExt>
<h2>@ViewBag.Title</h2>
<style>
    .gl-title {
        padding: 10px 0;
        height: 36px;
    }
</style>

@if (Model != null && Model.Any())
{
   
    <div class="resultDiv">
        <table class="resultTable" id="calcTotalAmount">
            <thead>
                <tr class="gl-title">
                    <th>参团记录Id</th>
                    <th>操作</th>
                    <th>会员Id</th>
                    <th>会员昵称</th>
                    <th>会员手机号码</th>
                    <th>IP地址</th>
                    <th>参团日期</th>
                    <th>是否收入囊中</th>
                    <th>是否团长</th>
                    <th>商品名称</th>
                    <th>活动SysNo</th>
                    <th>商品SysNo</th>
                    <th>商品Id</th>
                    <th>团SysNo</th>
                    <th>团长会员Id</th>
                    <th>团长是否一元购</th>
                    <th>团是否有效</th>
                    <th>团创建时间</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="gl-title">
                        <td>@item.SysNo</td>
                        <td><a style="color: #191970" target="_blank" href="javascript:showMemberForm(@item.GroupStructureSysNo,@item.GroupActivitySysNo,@item.GroupGoodsSysNo);" pvalue="@item.SysNo" >查看成员</a></td>
                        <td>@item.UserId</td>
                        <td>@item.NickName</td>
                        <td>@item.UserMobile</td>
                        <td>@item.ClientIp</td>
                        <td>@item.CreateTime</td>
                        @if (item.IsReceive ?? false)
                        {
                            <td>已领取
                            </td>
                        }
                        else
                        {
                            <td>未领取
                            </td>
                        }
                        @if ((item.UserId ?? 0) == (item.GroupHeadId ?? 0))
                        {
                            <td>是
                            </td>
                        }
                        else
                        {
                            <td>否
                            </td>
                        }
                        <td>@item.GoodsName</td>
                        <td>@item.GroupActivitySysNo</td>
                        <td>@item.GroupGoodsSysNo</td>
                        <td>@item.GoodsId</td>
                        <td>@item.GroupStructureSysNo</td>
                        <td>@item.GroupHeadId</td>
                        @if (item.GroupIsPayFree ?? false)
                        {
                            <td>支持
                            </td>
                        }
                        else
                        {
                            <td>否
                            </td>
                        }
                        @if (item.GroupIsDeleted ?? false)
                        {
                            <td>已关闭
                            </td>
                        }
                        else
                        {
                            <td>有效
                            </td>
                        }
                        <td>@item.GroupCreateDate</td>
                    </tr>
                }
            </tbody>
            <tfoot>
            </tfoot>
        </table>
    </div>
        
    

}

